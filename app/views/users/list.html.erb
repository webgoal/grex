<div class="header">
	<h1><%= link_to "grex", "/", {:title => 'grex' } %></a></h1>
	<a href="/schedules" class="voltar">Voltar</a>
   <%= link_to "Sair", "/sessions/logout", { :class=>'sair', :title => 'Sair' } if signed_in? %></a>
</div>

<div class="content">
<div class="titulo-principal">Minha programação</div>
  <div class="dia">
    <div class="trilha geral">
		<a name="2011-06-29"></a>
		<div class="titulo">29/06</div>
		<% for talk in @talks[:first] do %>
			<div class="linha active">
                <input type="hidden" value="<%= talk.id %>" >
                <div class="horario">
                	<%= hidden_field_tag("start_#{talk.start.to_time.to_i}", talk.start.to_time.to_i, {:class => 'start'}) %> 
                    <%= hidden_field_tag("end_#{talk.end.to_time.to_i}"    , talk.end.to_time.to_i  , {:class => 'end'  }) %>
					<p><%= talk.start.hour.to_s.rjust(2, '0') %><%=':'+talk.start.min.to_s.rjust(2, '0') %></p>
                	<p class="fim"><%= talk.end.hour.to_s.rjust(2, '0') %><%= ':'+talk.end.min.to_s.rjust(2, '0') %></p>
                </div>
                <div class="escolha">
                    <a href="#" title="Eu vou!" class="btn-vo">Eu vo!</a>
                    <span class="quantidade"><%= talk.viewers %></span>
                </div>
                <div class="descricao">
                    <p><%= link_to talk.title, "/talks/show/#{talk.id}" %></p>
                    <p class="palestrante"><%= print_speakers talk.speakers %></p>
                    <p><%= talk.type %> <span class='<%= normalize_string(talk.level) unless talk.level.nil?%>' ><%= talk.level %></p> 
                </div>
            </div>
