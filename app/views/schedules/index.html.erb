<div id="container">
	<div class="header">
		<a class="programacao" href="<%= url_for :controller => 'users', :action => 'list' %>">Minha programação</a>
	</div>
	
	<nav>
		<h2><span class="numero">5/9</span> <span class="dia" atual="dia_5">Quarta-feira</span></h2>		
		<div class="botoes">
			<a class="anterior" href="">Anterior</a>
			<a class="proximo" href="">Próximo</a>
		</div>	
	</nav>
	<div id="content">
		<% for day, tracks in @lista do %>
			<div class="grupo <%= day %>">
			<% for track_class, track  in tracks do %>
				<div class="itens-lista <%= track_class %>">
					<h2 class="horario"><%= track[:name] %></h2>
					<ul>
						<% for talk in track[:talks] do %>
							<li>
								<input type="hidden" value="<%= talk.id %>" >
								<div class="sala">
									<h3><%= talk.room %></h3>
									<h3><%= talk.start.hour.to_s.rjust(2, '0') %><%=':'+talk.start.min.to_s.rjust(2, '0') %></h3>
		                			<h3><%= talk.end.hour.to_s.rjust(2, '0') %><%= ':'+talk.end.min.to_s.rjust(2, '0') %></h3>
									<p><%= talk.viewers %></p>
								</div>
								<div class="info">
									<h2><%= talk.title %></h2>
									<p class="palestrante"><%= talk.speakers.map {|speaker| speaker.name}.join(', ') %></p>
									<div class="tipo">
										<p class="trilha"><%= talk.track %></p>
										<% if talk.level != "" %>
											<p class="nivel"><%= talk.level %></p>
										<% end %>
										<% if talk.type != "" %>
											<p><%= talk.type %></p>
										<% end %>
									</div>
								</div>
								<div class="detalhe">
									<%= link_to "Detalhe", "/talks/show/#{talk.id}" %>
								</div>
							</li>					
						<% end %>				
					</ul>
				</div>	
			<% end %>
			</div>
		<% end %>	
	</div>
</div>